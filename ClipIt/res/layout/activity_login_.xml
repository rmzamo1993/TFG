<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBF00"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/ImgPass"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignLeft="@+id/VerificationButton"
        android:layout_alignTop="@+id/password"
        android:src="@drawable/pass" />

    <ImageView
        android:id="@+id/ImgUser"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignLeft="@+id/ImgPass"
        android:layout_alignTop="@+id/user"
        android:src="@drawable/user1" />

    <ImageView
        android:id="@+id/ImgFoto"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo_jxl" />

    <EditText
        android:id="@+id/user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ImgFoto"
        android:layout_alignLeft="@+id/password"
        android:layout_marginBottom="54dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ImgFoto"
        android:layout_toRightOf="@+id/ImgUser"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/VerificationButton"
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:layout_below="@+id/ImgFoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:background="#333"
        android:text="Iniciar Sesion"
        android:textColor="#FFF" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/VerificationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp" 
        android:visibility="gone"/>

</RelativeLayout>