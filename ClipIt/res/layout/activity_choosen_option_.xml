<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBF00"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.clipit.autentication.ChoosenOption_Activity" 
    >

   
    
    <Button
        android:id="@+id/register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentBottom="true"
        android:background="#000"
        android:text="Registrarse"
        android:textColor="#FFF"
        android:textStyle="bold" 
        />

    <Button
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register"
        android:layout_marginBottom="14dp"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentRight="true"
         android:background="#000"
        android:text="Iniciar Sesion"
        android:textColor="#FFF"
        android:textStyle="bold" />

     <ImageSwitcher
         android1:id="@+id/imageSwitcher"
         android1:layout_width="wrap_content"
         android1:layout_height="wrap_content"
         android1:layout_alignParentTop="true"
         android1:layout_centerHorizontal="true"
         android1:layout_marginTop="40dp" >
     </ImageSwitcher>

     <TextSwitcher
         android1:id="@+id/textSwitcher"
         android1:layout_width="fill_parent"
         android1:layout_height="wrap_content"
         android1:layout_alignParentLeft="true"
         android1:layout_below="@+id/imageSwitcher"
         android1:layout_marginTop="44dp"
         android1:padding="10dp"
         android1:textColor="#000000"
         android1:textSize="200sp"
         android1:textStyle="bold" >
     </TextSwitcher>

</RelativeLayout>